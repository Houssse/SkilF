<%= turbo_frame_tag comment do %>
  <p><%= comment.content %></p>

  <div style="display: flex; flex-direction: row">
    <%= link_to "Edit", edit_comment_path(comment, article_id: article.id) %> |
    <%= button_to "Destroy", comment, method: :delete %> |
    <%= link_to "Reply", new_comment_path(parent_id: comment.id, article_id: article.id), data: { turbo_frame: dom_id(comment, :new_comment) } %>
  </div>
<% end %>