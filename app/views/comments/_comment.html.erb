<%= turbo_frame_tag comment do %>

  <h5><%= comment.user.name %></h5>
    <p><%= comment.content %> </p>
    
  <div class="btn-group mb-3">
    <%= link_to "Edit", edit_comment_path(comment, article_id: article.id), class: "btn btn-outline-primary" %> 
    <%= link_to "Destroy", comment, data: {turbo_method: :delete}, class: "btn btn-outline-primary" %> 
    <%= link_to "Reply", new_comment_path(parent_id: comment.id, article_id: article.id),
     data: { turbo_frame: dom_id(comment, :new_comment) },
     class: "btn btn-outline-primary" %>
  </div>
<% end %>